#navbar.navbar.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to blog_dashboard_root_path, class: 'brand', "data-no-turbolink" => true do
        Blog


      .nav-collapse.collapse
        %ul.nav

          %li.divider-vertical

          %li
            = link_to "Posts", posts_path

          %li
            = link_to "Categories", categories_path

          %li
            = link_to 'Comments', comments_path




        %ul.nav.pull-right
          %li.divider-vertical
          %li
            .btn-group
              %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = I18n.locale
                %span.caret
              %ul.dropdown-menu
                - I18n.available_locales.select{|x| x != I18n.locale }.each do |locale|
                  %li= link_to locale, "?locale=#{locale}"


